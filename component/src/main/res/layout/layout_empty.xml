<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/empty_layout_margin_top">


    <TextView
        android:id="@+id/tv_empty_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/empty_loading_tip"
        android:textColor="#ffffff"
        android:textSize="15sp" />


    <com.palmwifi.view.loadingballs.BallView
        android:id="@+id/pb_empty_tip"
        android:layout_width="@dimen/w_110"
        android:layout_height="@dimen/w_110"
        android:layout_above="@id/tv_empty_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        lib:ball_colors="@array/colors"
        lib:balls="3"
        lib:enable_size_animation="true"
        lib:max_ball_size="@dimen/w_10"
        lib:min_ball_size="@dimen/w_5"
        lib:movement_cycle_time="2000"
        lib:size_cycle_time="500" />

    <ImageView
        android:id="@+id/img_empty_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_empty_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible" />

</RelativeLayout>


