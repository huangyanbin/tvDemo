<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="@dimen/h_1000"
        android:layout_height="@dimen/h_300"
        android:gravity="center"
        android:padding="@dimen/w_100"
        android:textColor="@color/white"
        android:background="@drawable/dialog_comm_content"
        android:textSize="@dimen/w_35" />

    <LinearLayout
        android:layout_width="@dimen/h_1000"
        android:layout_height="@dimen/h_100"
        android:background="@drawable/dialog_bottom_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:clickable="true"
            android:background="@drawable/dialog_btn_left_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/white"
            android:textSize="@dimen/w_35" />

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:background="@drawable/dialog_btn_right_selector"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/white"
            android:textSize="@dimen/w_35" />

    </LinearLayout>

</LinearLayout>