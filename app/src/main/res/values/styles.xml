<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/home_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="HomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/home_bg2</item>
    </style>
    <!-- Base application theme. -->
    <style name="PersonalTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/perasonal_bg</item>
    </style>
    <style name="head_bar_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h_29</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_card_view_style">
        <item name="android:layout_width">@dimen/w_442</item>
        <item name="android:layout_height">@dimen/h_296</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="cardCornerRadius">@dimen/w_1</item>
    </style>

    <style name="home_card_view_style2" parent="home_card_view_style">
        <item name="android:layout_height">@dimen/h_341</item>
        <item name="android:layout_width">@dimen/w_444</item>
    </style>

    <style name="home_card_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/h_50</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="videoProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/video_progress_bg</item>
        <item name="android:maxHeight">@dimen/w_9</item>
        <item name="android:minHeight">@dimen/w_9</item>
    </style>

    <style name="recyclerProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/recycler_progress_bg</item>
    </style>
</resources>
